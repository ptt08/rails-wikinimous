<h1>
  <%= @article.title %>
  <small>
    <%= link_to edit_article_path(@article) do %>
      <i class="fa fa-pencil"></i>
    <% end %>
    <%= link_to article_path(@article), data: {
      turbo_method: :delete, turbo_confirm: "Are you sure?"
    } do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </small>
</h1>
<hr>
<p><%= @article.content %></p>
